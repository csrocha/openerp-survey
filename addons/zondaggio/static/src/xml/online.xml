<templates>
    <div t-name="StyledView" class="zoe_zondaggio zoe_zondaggio_stopped Xzoe_full_screen">
        <t t-call="z_mask">
            <t t-set="title" t-value="widget.get_name()"/>
            <t t-set="description" t-value="widget.get_description()"/>
        </t>

        <t t-foreach="widget.get_pages()" t-as="page" t-att-class="item_parity">
            <t t-call="z_page">
                <t t-set="page_number" t-value="page"/>
                <t t-set="pages" t-value="widget.get_pages()"/>
            </t>
        </t>
    </div>

    <section t-name="z_mask" class="zoe_page zoe_scroll-item zoe_mask">
        <table class="zoe_logos">
            <tr>
                <td class="zoe_logos">
                    <img class="z_logo" src="zondaggio/static/src/img/logo_fop.png"/>
                </td>
                <td class="zoe_logos_space" width="50%"/>
                <td class="zoe_logos">
                    <img class="z_logo" src="zondaggio/static/src/img/logo_mincyt.png"/>
                </td>
            </tr>
        </table>
        <table class="zoe_intro">
            <tr class="zoe_title">
                <td>
                    <p><t t-esc="title"/></p>
                </td>
            </tr>
            <tr class="zoe_subtitle">
                <td>
                    <p>INTRODUCCIÓN Y PROTECCIÓN DE LOS DATOS</p>
                </td>
            </tr>
            <tr class="zoe_description">
                <td>
                    <t t-raw="description"/>
                </td>
            </tr>
        </table>
    </section>

    <section t-name="z_page" class="zoe_section zoe_scroll-item zoe_page">
        <t t-foreach="pages[page_number]" t-as="node" t-att-class="item_parity">
            <t t-if="[null, 'widget_div'].indexOf(node.widget) != -1">
                <div t-if="node.type != 'Null' and !node_first" style="clear:both"/>
                <div t-if="node.type != 'Null'" t-attf-class="zoe_label #{node.classes}">
                    <t t-raw="node.question"/>
                </div>
                <div t-if="node.type == 'Variable'" t-attf-class="zoe_input #{node.classes}">
                    <input      t-if="node.format_id[1] == 'Char'"/>
                    <textarea   t-if="node.format_id[1] == 'Text'"/>
                    <input      t-if="node.format_id[1] == 'Boolean'" type="checkbox"/>
                </div>
                <div t-if="node.type == 'Null'" t-attf-class="zoe_input #{node.classes}">
                    <input      t-if="node.type == 'Null'" type="radio" t-attf-name="p#{node.parent_id[1]}"/>
                </div>
            </t>
        </t>
        <div style="clear:both"/>
        <button class="cupid-blue" name="do_save" style="clear:inherit">Guardar</button>
    </section>

</templates>
