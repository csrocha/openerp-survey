<!-- sondaggio.answer -->
<!-- sondaggio.answer -->
<!-- sondaggio.answer -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="sondaggio.view_sondaggio_answer_filter" model="ir.ui.view">
            <field name="name">sondaggio.answer.select</field>
            <field name="model">sondaggio.answer</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <search string="Answer" version="7.0">
                    <group string="Search by">
                        <field name="name" string="Question" />
                        <field name="input" string="Input" />
                        <field name="message" string="Message" />
                    </group>
                    <group string="State">
                        <filter string="Enabled"  context="[('state','=','enabled')]"/>
                        <filter string="Disabled" context="[('state','=','disabled')]"/>
                        <filter string="Closed"   context="[('state','=','closed')]"/>
                        <filter string="Valid"    context="[('Valid','=',True)]"/>
                        <filter string="Invalid"  context="[('Valid','=',False)]"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_sondaggio_answer_form" model="ir.ui.view">
            <field name="name">sondaggio.answer.form</field>
            <field name="model">sondaggio.answer</field>
            <field name="arch" type="xml">
                <form string="Answer" version="7.0">
                    <header>
                        <button name="sgn_disable"
                            states="enabled"
                            string="Disable"
                            />
                        <button name="action_wfk_set_enabled"
                            type="object"
                            states="disabled"
                            string="Enable"
                            />
                        <button name="sgn_close"
                            states="disabled"
                            string="Close"
                            />
                        <field name="state" widget="statusbar"
                            statusbar_colors='{}'
                            />
                    </header>
                    <sheet string="Answer">
                     <group>
                        <field name="name"
                            />
                        <field name="input"
                            />
                        <field name="formated"
                            />
                        <field name="message"
                            />
                        <field name="question_id"
                            />
                        <field name="questionnaire_id"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_sondaggio_answer_tree" model="ir.ui.view">
            <field name="name">sondaggio.answer.tree</field>
            <field name="model">sondaggio.answer</field>
            <field name="arch" type="xml">
                <tree string="Answer"
                    colors="grey:state=='cancelled';blue:state in ('enabled',);black:state in ('disabled',); red:state in ()"
                    >
                    <field name="name" />
                    <field name="input" />
                    <field name="message" />
                    <field name="state" readonly='True' invisible='1'/>
                </tree>
            </field>
        </record>

        <record id="sondaggio.view_sondaggio_answer_tree_edit" model="ir.ui.view">
            <field name="name">sondaggio.answer.tree_edit</field>
            <field name="model">sondaggio.answer</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <tree string="Answer"
                    editable="bottom"
                    colors="grey:state=='cancelled';blue:state in ('enabled',);black:state in ('disabled',); red:state in ()"
                    toolbar="1"
                    >
                    <field name="name" />
                    <field name="input" />
                    <field name="message" />
                    <field name="state" readonly='True' invisible='1'/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
