<!-- survey_methodology.format -->
<!-- survey_methodology.format -->
<!-- survey_methodology.format -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_survey_methodology_format_filter" model="ir.ui.view">
            <field name="name">survey_methodology.format.select</field>
            <field name="model">survey_methodology.format</field>
            <field name="arch" type="xml">
                <search string="format" version="7.0">
                    <group string="By Attribute">
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_survey_methodology_format_form" model="ir.ui.view">
            <field name="name">survey_methodology.format.form</field>
            <field name="model">survey_methodology.format</field>
            <field name="arch" type="xml">
                <form string="format" version="7.0">
                    <header>
                    </header>
                    <sheet string="format">
                     <group>
                        <field name="name"
                            />
                        <field name="validation"
                            on_change="onchange_code(validation, formating, message_ids, input_test_ids)"
                            />
                        <field name="formating"
                            on_change="onchange_code(validation, formating, message_ids, input_test_ids)"
                            />
                        <field name="tests_result"
                            />
                        <field name="compile_message"
                            />
                    <field name="input_test_ids"
                            on_change="onchange_code(validation, formating, message_ids, input_test_ids)"
                            />
                    <field name="message_ids"
                            on_change="onchange_code(validation, formating, message_ids, input_test_ids)"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_survey_methodology_format_tree" model="ir.ui.view">
            <field name="name">survey_methodology.format.tree</field>
            <field name="model">survey_methodology.format</field>
            <field name="arch" type="xml">
                <tree string="format"
                    >
                    <field name="name"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
