<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_survey_methodology_category_filter" model="ir.ui.view">
            <field name="name">survey_methodology.category.select</field>
            <field name="model">survey_methodology.category</field>
            <field name="arch" type="xml">
                <search string="Question Category" version="7.0">
                    <group string="By Attribute">
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_survey_methodology_category_form" model="ir.ui.view">
            <field name="name">survey_methodology.category.form</field>
            <field name="model">survey_methodology.category</field>
            <field name="arch" type="xml">
                <form string="Question Category" version="7.0">
                    <header>
                    </header>
                    <sheet string="Question Category">
                     <group>
                        <field name="name"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_survey_methodology_category_tree" model="ir.ui.view">
            <field name="name">survey_methodology.category.tree</field>
            <field name="model">survey_methodology.category</field>
            <field name="arch" type="xml">
                <tree string="Question Category"
                    >
                    <field name="name"
                        />
                    <field name="parent_id"
                            invisible="True"
                       />
                </tree>
            </field>
        </record>

        <record id="view_survey_methodology_category_tree_hier" model="ir.ui.view">
            <field name="name">survey_methodology.category.tree_hier</field>
            <field name="model">survey_methodology.category</field>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
                <tree string="Question Category"
                    >
                    <field name="name"
                        />
                    <field name="parent_id"
                            invisible="True"
                       />
                </tree>
            </field>
        </record>

    </data>
